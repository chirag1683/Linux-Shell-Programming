#include <stdio.h>

int main() {
    float kmph, mph;
    
    // Prompt user for input
    printf("Enter speed in kilometers per hour: ");
    scanf("%f", &kmph);
    
    // Convert km/h to mph (1 km/h = 0.621371 mph)
    mph = kmph * 0.621371;
    
    // Display result
    printf("Speed in miles per hour: %.2f\n", mph);
    
    return 0;
}
