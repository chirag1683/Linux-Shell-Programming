#include <stdio.h>

int main() {
    float height, width, perimeter;
    
    // Prompt user for input
    printf("Enter height of the rectangle: ");
    scanf("%f", &height);
    
    printf("Enter width of the rectangle: ");
    scanf("%f", &width);
    
    // Calculate perimeter
    perimeter = 2 * (height + width);
    
    // Display result
    printf("Perimeter of the rectangle: %.2f\n", perimeter);
    
    return 0;
}
